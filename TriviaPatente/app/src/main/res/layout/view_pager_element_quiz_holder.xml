<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_height="@dimen/quiz_box_height"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/quiz_box_margin_horizontal"
        android:layout_marginLeft="@dimen/quiz_box_margin_horizontal"
        android:background="@drawable/rounded_white_box"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/quizDescriptionBox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/quiz_description_box_padding_vertical"
            android:layout_marginLeft="@dimen/quiz_description_box_padding_horizontal"
            android:layout_marginRight="@dimen/quiz_description_box_padding_horizontal">

            <ImageView
                android:id="@+id/quizImage"
                android:layout_width="@dimen/quiz_image_size_small"
                android:layout_height="@dimen/quiz_image_size_small"
                android:layout_marginRight="@dimen/quiz_description_margin"/>

            <TextView
                android:id="@+id/quizDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/TPTextSizeSmall"
                android:textColor="@color/quizTextColor"
                android:scrollbars = "vertical"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mainColor"
            android:layout_marginLeft="@dimen/quiz_separator_margin_horizontal"
            android:layout_marginRight="@dimen/quiz_separator_margin_horizontal"
            android:layout_marginTop="@dimen/quiz_description_box_padding_vertical"
            android:layout_marginBottom="@dimen/quiz_true_false_padding_vertical"/>

        <LinearLayout
            android:id="@+id/quizAnswerBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/quiz_true_false_padding_vertical">

            <Button
                android:id="@+id/trueButton"
                android:layout_width="@dimen/quiz_true_false_button_size"
                android:layout_height="@dimen/quiz_true_false_button_size"
                android:background="@drawable/button_true_false"
                android:text="V"
                android:textColor="@color/main_color_on_white"
                android:textSize="@dimen/TPTextSizeLarge" />

            <Button
                android:id="@+id/falseButton"
                android:layout_width="@dimen/quiz_true_false_button_size"
                android:layout_height="@dimen/quiz_true_false_button_size"
                android:background="@drawable/button_true_false"
                android:text="F"
                android:textColor="@color/main_color_on_white"
                android:textSize="@dimen/TPTextSizeLarge"
                android:layout_marginLeft="@dimen/quiz_true_false_margin"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>