<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/quiz_box_margin_horizontal"
        android:layout_marginRight="@dimen/quiz_box_margin_horizontal"
        android:background="@drawable/rounded_white_box"
        android:orientation="vertical"
        android:padding="@dimen/quiz_padding">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/roundNameView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/header_quiz_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Round 1"
                android:textColor="@color/vpi__bright_foreground_disabled_holo_dark"
                android:textSize="@dimen/TPTextSizeVerySmall"
                android:textStyle="bold" />

            <it.triviapatente.android.app.utils.custom_classes.images.RoundedImageView
                android:id="@+id/categoryImageView"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@id/categoryNameView"
                android:layout_toStartOf="@id/categoryNameView" />

            <TextView
                android:id="@+id/categoryNameView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/header_quiz_height"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="Opponent"
                android:textColor="@color/vpi__bright_foreground_disabled_holo_light"
                android:textSize="@dimen/TPTextSizeVerySmall" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <it.triviapatente.android.app.utils.custom_classes.images.RoundedImageView
                android:id="@+id/opponentImageView"
                android:layout_width="@dimen/header_quiz_height"
                android:layout_height="@dimen/header_quiz_height" />

            <TextView
                android:id="@+id/opponentNameView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/header_quiz_height"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="Categoria 1"
                android:textColor="@color/vpi__bright_foreground_disabled_holo_light"
                android:textSize="@dimen/TPTextSizeVerySmall" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/quizDescriptionBox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/quiz_description_box_padding_horizontal"
            android:layout_marginRight="@dimen/quiz_description_box_padding_horizontal"
            android:layout_marginTop="@dimen/quiz_description_box_padding_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <it.triviapatente.android.app.utils.custom_classes.images.TPExpandableImageView
                android:id="@+id/quizImage"
                android:layout_width="@dimen/quiz_image_size_big"
                android:layout_height="@dimen/quiz_image_size_big"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/quizDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:scrollbars="vertical"
                android:textColor="@color/quizTextColor"
                android:textSize="@dimen/TPTextSizeSmall" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/quizAnswerBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/quiz_true_false_padding_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/quiz_true_false_height">

                <it.triviapatente.android.app.utils.custom_classes.buttons.LoadingButton
                    android:id="@+id/trueButton"
                    android:layout_width="@dimen/quiz_true_false_width"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_true_false"
                    android:text="Vero"
                    android:textColor="@color/main_color_on_white"
                    android:textSize="@dimen/TPTextSizeMedium"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/quiz_true_false_height"
                android:layout_marginLeft="@dimen/quiz_true_false_margin"
                android:layout_marginStart="@dimen/quiz_true_false_margin">

                <it.triviapatente.android.app.utils.custom_classes.buttons.LoadingButton
                    android:id="@+id/falseButton"
                    android:layout_width="@dimen/quiz_true_false_width"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_true_false"
                    android:text="Falso"
                    android:textColor="@color/main_color_on_white"
                    android:textSize="@dimen/TPTextSizeMedium"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>