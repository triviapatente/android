<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/expandableList"
    tools:context=".app.views.expandable_list.TPExpandableList">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_heigth"
        android:background="@color/mainColorDark">

        <TextView
            android:id="@+id/listTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/listCounter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/list_rigth_margin_title"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
