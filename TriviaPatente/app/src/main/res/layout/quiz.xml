<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/quiz_height"
    android:background="@android:color/white"
    android:padding="@dimen/quiz_padding">
    
    <LinearLayout
        android:id="@+id/quizDescriptionBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/quiz_image_size"
            android:layout_height="@dimen/quiz_image_size"
            android:background="@drawable/no_image"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/TPTextSizeMedium"
            android:textColor="@color/mainColorDark2"
            android:maxLines = "4"
            android:scrollbars = "vertical"
            android:text="Il segnale raffigurato precede il segnale di DIREZIONE OBBLIGATORIA A DESTRA"
            android:layout_marginLeft="@dimen/quiz_description_margin"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mainColor"
        android:layout_marginTop="@dimen/quiz_description_margin"/>

    <LinearLayout
        android:id="@+id/quizAnswerBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
        android:layout_width="@dimen/quiz_true_false_button_size"
        android:layout_height="@dimen/quiz_true_false_button_size"
        android:background="@drawable/true_false_button"
        android:text="V"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/TPTextSizeMedium"/>

        <Button
            android:layout_width="@dimen/quiz_true_false_button_size"
            android:layout_height="@dimen/quiz_true_false_button_size"
            android:background="@drawable/true_false_button"
            android:text="F"
            android:textColor="@color/mainColor"
            android:textSize="@dimen/TPTextSizeLarge"
            android:layout_marginLeft="@dimen/quiz_true_false_margin"/>
    </LinearLayout>


</LinearLayout>