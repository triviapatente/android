<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_page_button_heigth">

    <View
        android:id="@+id/upperLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/disabledOptionColor"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="@dimen/main_button_coming_soon_width"
        android:layout_height="match_parent"
        android:background="@drawable/coming_soon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:id="@+id/comingSoon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/main_page_image_size"
            android:layout_height="@dimen/main_page_image_size"
            android:layout_gravity="center_vertical"
            android:id="@+id/main_button_image"
            android:layout_marginStart="@dimen/main_button_margin_horizontal"
            android:layout_marginLeft="@dimen/main_button_margin_horizontal"
            android:layout_marginEnd="@dimen/main_button_margin_horizontal"
            android:layout_marginRight="@dimen/main_button_margin_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/main_button_text"
            android:layout_marginRight="@dimen/main_button_margin_horizontal"
            android:layout_marginEnd="@dimen/main_button_margin_horizontal"
            android:textSize="@dimen/TPTextSizeMedium"
            android:textColor="@android:color/white"/>

        <TextSwitcher
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/main_button_margin_horizontal"
            android:layout_marginRight="@dimen/main_button_margin_horizontal"
            android:id="@+id/hintSwitcher">

        </TextSwitcher>
    </LinearLayout>

</RelativeLayout>