<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/mainColor"
    android:id="@+id/gameHeader">

    <TextView
        android:id="@+id/gameHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/TPTextSizeLarge"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="@string/game_header_waiting_title"
        android:layout_marginLeft="@dimen/game_header_margin"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_marginLeft="@dimen/game_header_inner_margin"
        android:layout_marginRight="@dimen/game_header_inner_margin"/>

    <ImageView
        android:id="@+id/subtitleImage"
        android:layout_width="@dimen/game_header_image_size"
        android:layout_height="@dimen/game_header_image_size"
        android:layout_marginRight="@dimen/game_header_margin_right_image"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/gameHeaderSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/game_header_margin"
        android:textSize="@dimen/TPTextSizeMedium"
        android:text="@string/game_header_waiting_subtitle"
        android:textColor="@android:color/white"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"/>


</LinearLayout>