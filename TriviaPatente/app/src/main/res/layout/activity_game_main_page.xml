<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.views.game_page.GameMainPageActivity"
    android:background="@color/mainColor">

    <com.ted_developers.triviapatente.app.utils.custom_classes.top_bar.BackPictureTPToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tp_toolbar_height"
        android:layout_alignParentTop="true"/>

    <include
        layout="@layout/game_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"/>

    <include
        android:id="@+id/waitPage"
        layout="@layout/content_game_main_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/gameHeader"/>

    <include
        android:id="@+id/chooseCategoryPage"
        layout="@layout/content_choose_category_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/gameHeader" />

    <include
        layout="@layout/loading_view"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />

</RelativeLayout>
