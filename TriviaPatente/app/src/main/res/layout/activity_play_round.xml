<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.views.game_page.play_round.PlayRoundActivity"
    android:background="@color/mainColor">
    <com.ted_developers.triviapatente.app.utils.custom_classes.actionBar.TPActionBar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tp_toolbar_height"
        android:layout_alignParentTop="true"
        custom:action_bar_type="backPicture"
        custom:action_bar_back_title="@string/main_page_title"/>

    <include layout="@layout/content_play_round"
        android:id="@+id/game_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/action_bar"
        android:layout_above="@+id/banner"/>
    
    <View
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_height"
        android:background="@color/red"
        android:layout_alignParentBottom="true"/>

    <include layout="@layout/layout_blurred_blue"/>

</RelativeLayout>
