<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.views.game_page.play_round.PlayRoundActivity"
    android:background="@color/mainColor">
    <com.ted_developers.triviapatente.app.utils.custom_classes.actionBar.BackPictureTPActionBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tp_toolbar_height"
        android:layout_alignParentTop="true"
        custom:action_bar_back_title="@string/main_page_title"/>

    <include
        layout="@layout/game_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/play_round_content_margin"
        android:layout_below="@+id/toolbar"/>

    <include layout="@layout/content_play_round"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/gameHeader"
        android:layout_above="@+id/gameOptions"/>

    <include
        layout="@layout/game_options"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_above="@+id/banner"
        android:layout_marginBottom="@dimen/play_round_content_margin"/>
    
    <View
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_height"
        android:background="@color/red"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
