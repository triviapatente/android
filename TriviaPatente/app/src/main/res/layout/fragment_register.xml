<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".app.views.access.Register.RegisterFragment"
    android:background="@color/mainColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <!-- alert box -->
        <com.ted_developers.triviapatente.app.utils.custom_classes.output.MessageBox
            android:id="@+id/alertMessage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/alert_height"
            android:background="@drawable/rounded_alertbox"
            android:layout_marginBottom="@dimen/element_margin"
            android:layout_marginLeft="@dimen/field_margin"
            android:layout_marginStart="@dimen/field_margin"
            android:layout_marginRight="@dimen/field_margin"
            android:layout_marginEnd="@dimen/field_margin"/>

        <!-- username input -->
        <com.ted_developers.triviapatente.app.utils.custom_classes.input.LabeledInput
            android:id="@+id/username_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/element_margin"
            android:layout_marginLeft="@dimen/field_margin"
            android:layout_marginStart="@dimen/field_margin"
            android:layout_marginRight="@dimen/field_margin"
            android:layout_marginEnd="@dimen/field_margin"/>

        <!-- email input -->
        <com.ted_developers.triviapatente.app.utils.custom_classes.input.LabeledInput
            android:id="@+id/email_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/element_margin"
            android:layout_marginLeft="@dimen/field_margin"
            android:layout_marginStart="@dimen/field_margin"
            android:layout_marginRight="@dimen/field_margin"
            android:layout_marginEnd="@dimen/field_margin"/>

        <!-- password input -->
        <com.ted_developers.triviapatente.app.utils.custom_classes.input.LabeledInput
            android:id="@+id/password_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/element_margin"
            android:layout_marginLeft="@dimen/field_margin"
            android:layout_marginStart="@dimen/field_margin"
            android:layout_marginRight="@dimen/field_margin"
            android:layout_marginEnd="@dimen/field_margin"/>

        <!-- repeat password input -->
        <com.ted_developers.triviapatente.app.utils.custom_classes.input.LabeledInput
            android:id="@+id/repeat_password_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/element_margin"
            android:layout_marginLeft="@dimen/field_margin"
            android:layout_marginStart="@dimen/field_margin"
            android:layout_marginRight="@dimen/field_margin"
            android:layout_marginEnd="@dimen/field_margin"/>

        <!-- layout required to loading button -->
        <RelativeLayout
            android:id="@+id/buttonPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/element_margin">

            <!-- register loading button -->
            <com.ted_developers.triviapatente.app.utils.custom_classes.loading.LoadingButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_height"
                android:text="@string/button_register"
                android:id="@+id/register_button"
                android:background="@drawable/button_first_access"
                android:textColor="@android:color/white"
                android:layout_marginLeft="@dimen/field_margin"
                android:layout_marginStart="@dimen/field_margin"
                android:layout_marginRight="@dimen/field_margin"
                android:layout_marginEnd="@dimen/field_margin"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <!-- or separator -->
        <include layout="@layout/layout_or"/>

        <!-- facebook login button -->
        <ImageButton
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            android:id="@+id/facebook_button"
            android:scaleType="fitCenter"
            android:src="@mipmap/fb_logo"
            android:background="@android:color/transparent"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</FrameLayout>
