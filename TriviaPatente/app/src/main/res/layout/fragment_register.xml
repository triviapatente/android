<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".app.views.first_access.Register.RegisterFragment"
    android:background="@color/mainColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <!-- alert box -->
        <LinearLayout
            android:id="@+id/register_failed"
            android:layout_width="match_parent"
            android:layout_height="@dimen/alert_height"
            android:background="@drawable/alertbox_rounded"
            android:layout_marginBottom="@dimen/element_margin"
            android:layout_marginLeft="@dimen/field_margin"
            android:layout_marginStart="@dimen/field_margin"
            android:layout_marginRight="@dimen/field_margin"
            android:layout_marginEnd="@dimen/field_margin"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/alert_image_size"
                android:layout_height="@dimen/alert_image_size"
                android:src="@drawable/alert"
                android:layout_marginLeft="@dimen/alert_inside_padding"
                android:layout_marginRight="@dimen/alert_inside_padding"
                android:layout_marginEnd="@dimen/alert_inside_padding"
                android:layout_marginStart="@dimen/alert_inside_padding" />

            <TextView
                android:id="@+id/alertMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/alert_inside_padding"
                android:layout_marginEnd="@dimen/alert_inside_padding" />
        </LinearLayout>

        <!-- username input -->
        <com.ted_developers.triviapatente.app.utils.mViews.Input.LabeledInput
            android:id="@+id/username_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/element_margin"
            android:layout_marginLeft="@dimen/field_margin"
            android:layout_marginStart="@dimen/field_margin"
            android:layout_marginRight="@dimen/field_margin"
            android:layout_marginEnd="@dimen/field_margin"></com.ted_developers.triviapatente.app.utils.mViews.Input.LabeledInput>

        <!-- email input -->
        <com.ted_developers.triviapatente.app.utils.mViews.Input.LabeledInput
            android:id="@+id/email_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/element_margin"
            android:layout_marginLeft="@dimen/field_margin"
            android:layout_marginStart="@dimen/field_margin"
            android:layout_marginRight="@dimen/field_margin"
            android:layout_marginEnd="@dimen/field_margin"></com.ted_developers.triviapatente.app.utils.mViews.Input.LabeledInput>

        <!-- password input -->
        <com.ted_developers.triviapatente.app.utils.mViews.Input.LabeledInput
            android:id="@+id/password_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/element_margin"
            android:layout_marginLeft="@dimen/field_margin"
            android:layout_marginStart="@dimen/field_margin"
            android:layout_marginRight="@dimen/field_margin"
            android:layout_marginEnd="@dimen/field_margin"></com.ted_developers.triviapatente.app.utils.mViews.Input.LabeledInput>

        <!-- repeat password input -->
        <com.ted_developers.triviapatente.app.utils.mViews.Input.LabeledInput
            android:id="@+id/repeat_password_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/element_margin"
            android:layout_marginLeft="@dimen/field_margin"
            android:layout_marginStart="@dimen/field_margin"
            android:layout_marginRight="@dimen/field_margin"
            android:layout_marginEnd="@dimen/field_margin"></com.ted_developers.triviapatente.app.utils.mViews.Input.LabeledInput>

        <!-- layout required to loading button -->
        <RelativeLayout
            android:id="@+id/buttonPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/element_margin">

            <!-- register loading button -->
            <com.ted_developers.triviapatente.app.utils.mViews.LoadingButton.LoadingButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_height"
                android:text="@string/register"
                android:id="@+id/register_button"
                android:textAllCaps="false"
                android:background="@drawable/button_pressed_rounded"
                android:textColor="@android:color/white"
                android:layout_marginLeft="@dimen/field_margin"
                android:layout_marginStart="@dimen/field_margin"
                android:layout_marginRight="@dimen/field_margin"
                android:layout_marginEnd="@dimen/field_margin"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <!-- or separator -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/element_margin"
            android:layout_gravity="center">

            <!-- line -->
            <View
                android:layout_width="@dimen/line_length"
                android:layout_height= "@dimen/line_thickness"
                android:background="@android:color/white"
                android:layout_gravity="center_vertical"/>

            <!-- or message -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/or"
                android:textColor="@android:color/white"
                android:paddingLeft="@dimen/or_padding"
                android:paddingRight="@dimen/or_padding"
                android:paddingStart="@dimen/or_padding"
                android:paddingEnd="@dimen/or_padding"/>

            <!-- line -->
            <View
                android:layout_width="@dimen/line_length"
                android:layout_height= "@dimen/line_thickness"
                android:background="@android:color/white"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <!-- facebook login button -->
        <ImageButton
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            android:id="@+id/facebook_button"
            android:scaleType="fitCenter"
            android:src="@mipmap/fb_logo"
            android:background="@android:color/transparent"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</FrameLayout>
