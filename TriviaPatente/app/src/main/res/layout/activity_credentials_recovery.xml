<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/activityContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/background_gradient"
    tools:context="com.ted_developers.triviapatente.app.views.access.Login.CredentialsRecovery">

    <com.ted_developers.triviapatente.app.utils.custom_classes.actionBar.TPActionBar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tp_toolbar_height"
        android:layout_alignParentTop="true"
        custom:action_bar_type="backPicture"
        custom:action_bar_title="@string/credentials_recovery"/>

    <include
        layout="@layout/content_credentials_recovery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/action_bar"/>
</RelativeLayout>
