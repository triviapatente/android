<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context="com.triviapatente.android.it.ted_developers.triviapatente.app.views.game_page.ChatActivity"
    android:background="@color/mainColor">

    <it.triviapatente.android.app.utils.custom_classes.actionBar.TPActionBar
    android:id="@+id/action_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tp_toolbar_height"
    android:layout_alignParentTop="true"
    custom:action_bar_type="backPicture"
    custom:action_bar_back_title="@string/chat_back_title"/>

    <include
        layout="@layout/content_chat_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/action_bar"/>
</RelativeLayout>
