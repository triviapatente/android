<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/gameOptions"
    android:gravity="center_horizontal">

    <Button
        android:id="@+id/gameChatButton"
        android:layout_width="@dimen/game_options_button_size"
        android:layout_height="@dimen/game_options_button_size"
        android:background="@drawable/button_game_chat"
        android:layout_marginRight="@dimen/game_options_inner_margin"/>

    <Button
        android:id="@+id/gameDetailsButton"
        android:layout_width="@dimen/game_options_button_size"
        android:layout_height="@dimen/game_options_button_size"
        android:background="@drawable/button_game_details"
        android:layout_marginRight="@dimen/game_options_inner_margin"/>

    <Button
        android:id="@+id/gameLeaveButton"
        android:layout_width="@dimen/game_options_button_size"
        android:layout_height="@dimen/game_options_button_size"
        android:background="@drawable/button_game_leave"/>

</LinearLayout>