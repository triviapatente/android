<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recent_game_height"
    android:gravity="center_vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/recent_game_margin">

        <ImageView
            android:id="@+id/trafficLightsimage"
            android:layout_width="@dimen/traffic_lights_width"
            android:layout_height="@dimen/traffic_lights_height"
            android:layout_centerVertical="true"/>

        <com.ted_developers.triviapatente.app.utils.custom_classes.images.RoundedImageView
            android:id="@+id/profilePicture"
            android:layout_width="@dimen/profile_picture_size"
            android:layout_height="@dimen/profile_picture_size"
            android:layout_marginLeft="@dimen/recent_game_margin"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mainColor"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/vpi__bright_foreground_disabled_holo_light" />

    </LinearLayout>
    
    <com.ted_developers.triviapatente.app.utils.custom_classes.buttons.PlayButton
        android:id="@+id/recentGameButton"
        android:layout_width="@dimen/recent_game_button_width"
        android:layout_height="@dimen/recent_game_button_heigth"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/recent_game_margin"
        android:layout_centerVertical="true"/>



</RelativeLayout>