<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/play_button_radius"/>
            <solid android:color="@color/red"/>
            <stroke android:width="@dimen/play_button_border_size" android:color="@android:color/white" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/play_button_radius"/>
            <solid android:color="@android:color/white"/>
            <stroke android:width="@dimen/play_button_border_size" android:color="@color/red" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/play_button_radius"/>
            <solid android:color="@android:color/white"/>
            <stroke android:width="@dimen/play_button_border_size" android:color="@color/red" />
        </shape>
    </item>
</selector>