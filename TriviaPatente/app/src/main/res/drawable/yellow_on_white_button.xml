<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners
                android:topRightRadius="@dimen/play_button_radius"
                android:topLeftRadius="@dimen/play_button_radius"
                android:bottomRightRadius="@dimen/play_button_radius"
                android:bottomLeftRadius="@dimen/play_button_radius"/>
            <solid android:color="@color/yellow"/>
            <stroke android:width="@dimen/play_button_border_size" android:color="@android:color/white" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners
                android:topRightRadius="@dimen/play_button_radius"
                android:topLeftRadius="@dimen/play_button_radius"
                android:bottomRightRadius="@dimen/play_button_radius"
                android:bottomLeftRadius="@dimen/play_button_radius"/>
            <solid android:color="@android:color/white"/>
            <stroke android:width="@dimen/play_button_border_size" android:color="@color/yellow" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <corners
                android:topRightRadius="@dimen/play_button_radius"
                android:topLeftRadius="@dimen/play_button_radius"
                android:bottomRightRadius="@dimen/play_button_radius"
                android:bottomLeftRadius="@dimen/play_button_radius"/>
            <solid android:color="@android:color/white"/>
            <stroke android:width="@dimen/play_button_border_size" android:color="@color/yellow" />
        </shape>
    </item>
</selector>