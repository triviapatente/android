<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:buttonStyle">@style/TPButtonStyle</item>
        <item name="editTextStyle">@style/TPEditTextStyle</item>
        <item name="android:textViewStyle">@style/TPTextViewStyle</item>
        <item name="android:dialogTheme">@style/TPDialog</item>
        <!-- Action bar theme -->
        <item name="android:actionBarStyle">@style/TPActionBar</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- Colors -->
        <item name="colorPrimary">@color/mainColorGradTop</item>
        <item name="colorPrimaryDark">@color/mainColor</item>
        <item name="colorAccent">@color/mainColor</item>
        <!-- Spinner -->
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>
    </style>

    <style name="TPActionBar" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@color/mainColorGradTop</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="TPDialog" parent="@android:style/Theme.Dialog">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="TPEditTextStyle" parent="@android:style/Widget.Holo.EditText">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="TPTextViewStyle" parent="@android:style/Widget.Holo.TextView">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="TPButtonStyle" parent="@android:style/Widget.Holo.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="CounterStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@android:color/white</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="SpinnerItem.DropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
