<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:buttonStyle">@style/TPButtonStyle</item>
        <item name="editTextStyle">@style/TPEditTextStyle</item>
        <item name="android:textViewStyle">@style/TPTextViewStyle</item>
        <item name="android:dialogTheme">@style/TPDialog</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TPDialog" parent="@android:style/Theme.Dialog">
        <item name="android:typeface">monospace</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TPEditTextStyle" parent="@android:style/Widget.Holo.EditText">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="TPTextViewStyle" parent="@android:style/Widget.Holo.TextView">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="TPButtonStyle" parent="@android:style/Widget.Holo.Button">
        <item name="android:typeface">monospace</item>
    </style>

</resources>
