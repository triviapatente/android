<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:buttonStyle">@style/TPButtonStyle</item>
        <item name="editTextStyle">@style/TPEditTextStyle</item>
        <item name="android:textViewStyle">@style/TPTextViewStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TPEditTextStyle" parent="@android:style/Widget.Holo.EditText">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="TPTextViewStyle" parent="@android:style/Widget.Holo.TextView">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="TPButtonStyle" parent="@android:style/Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

</resources>
